generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum PokemonType {
  normal
  fire
  water
  grass
  electric
  ice
  fighting
  poison
  ground
  flying
  psychic
  bug
  rock
  ghost
  dark
  dragon
  steel
  fairy
}

enum MoveCategory {
  physical
  special
  status
}

model Pokemon {
  id             Int           @id @default(autoincrement())
  name           String
  level          Int
  type           PokemonType
  currentHp      Int
  totalHp        Int
  attack         Int
  defense        Int
  specialAttack  Int
  specialDefense Int
  speed          Int
  moves          PokemonMove[]

  battlesAsA Battle[] @relation("BattlePokemonA")
  battlesAsB Battle[] @relation("BattlePokemonB")

  turnsAsAttacker BattleTurn[] @relation("TurnAttacker")
  turnsAsDefender BattleTurn[] @relation("TurnDefender")
}

model Move {
  id          Int           @id @default(autoincrement())
  name        String
  type        PokemonType
  category    MoveCategory
  power       Int
  accuracy    Int
  pp          Int
  effect      String
  probability Int?
  pokemon     PokemonMove[]

  turns BattleTurn[]
}

model PokemonMove {
  id        Int @id @default(autoincrement())
  pokemonId Int
  moveId    Int
  pp        Int?

  pokemon Pokemon @relation(fields: [pokemonId], references: [id])
  move    Move    @relation(fields: [moveId], references: [id])

  @@unique([pokemonId, moveId])
}

model Battle {
  id                Int          @id @default(autoincrement())
  pokemonAId        Int
  pokemonBId        Int
  hpA               Int
  hpB               Int
  turn              Int          @default(1)
  currentAttackerId Int
  status            BattleStatus @default(in_progress)
  winnerId          Int?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  pokemonA Pokemon      @relation("BattlePokemonA", fields: [pokemonAId], references: [id])
  pokemonB Pokemon      @relation("BattlePokemonB", fields: [pokemonBId], references: [id])
  turns    BattleTurn[]
}

model BattleTurn {
  id              Int      @id @default(autoincrement())
  battleId        Int
  turnNumber      Int
  attackerId      Int
  defenderId      Int
  moveId          Int
  damage          Int
  effectiveness   Float
  randomRoll      Int
  defenderHpAfter Int
  attackerHpAfter Int?
  hit           Boolean? @default(true)
  createdAt       DateTime @default(now())
  message        String @default("")

  battle   Battle  @relation(fields: [battleId], references: [id])
  attacker Pokemon @relation("TurnAttacker", fields: [attackerId], references: [id])
  defender Pokemon @relation("TurnDefender", fields: [defenderId], references: [id])
  move     Move    @relation(fields: [moveId], references: [id])
}

enum BattleStatus {
  pending
  in_progress
  finished
}
