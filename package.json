{

  "name": "test-pokemon-api",

  "version": "1.0.0",

  "description": "",

  "main": "app.js",

  "type": "commonjs",

  "scripts": {

    "dev": "tsnd --respawn --clear src/app.ts",

    "dev:frontend": "cd frontend && npm run dev",

    "dev:all": "concurrently \"npm run dev\" \"npm run dev:frontend\"",

    "build": "rimraf dist && tsc",

    "start": "node dist/app.js",

    "test": "jest",

    "test:watch": "jest --watch",

    "test:coverage": "jest --coverage",

    "prisma:generate": "npx prisma generate",

    "prisma:migrate:dev": "npx prisma migrate dev --name init",

    "prisma:migrate:prod": "npx prisma migrate deploy",

    "prisma:seed": "ts-node prisma/seed.ts",

    "postinstall": "npm run prisma:generate"

  },

  "devDependencies": {

    "@types/cors": "^2.8.17",

    "@types/jest": "^30.0.0",

    "@types/node": "^24.10.0",

    "concurrently": "^9.2.1",

    "jest": "^30.2.0",

    "rimraf": "^6.1.0",

    "ts-jest": "^29.4.5",

    "ts-node": "^10.9.2",

    "ts-node-dev": "^2.0.0",

    "typescript": "^5.9.3"

  },

  "dependencies": {

    "@prisma/client": "^6.19.0",

    "@types/express": "^5.0.5",

    "cors": "^2.8.5",

    "dotenv": "^17.2.3",

    "env-var": "^7.5.0",

    "express": "^5.1.0",

    "prisma": "^6.19.0",

    "vite": "^7.2.2",

    "zod": "^4.1.12"

  }

}

